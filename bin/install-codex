#!/bin/bash
#
# install-codex - Install OpenAI Codex CLI
# author: Jonathan Tsai <hello@jontsai.com>
#
# Usage: install-codex
#
# Installs the OpenAI Codex CLI globally via npm.
# After install, run `codex` and sign in with ChatGPT Plus.
#

set -e

echo "Installing OpenAI Codex CLI..."
npm install -g @openai/codex

echo ""
echo "Codex CLI installed successfully!"
echo ""
echo "Next steps:"
echo "  1. Run: codex"
echo "  2. Select 'Sign in with ChatGPT'"
echo "  3. Authenticate via browser"
echo ""
