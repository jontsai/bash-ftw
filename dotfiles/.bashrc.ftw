}

function gitdeletenonmaster {
    for branch in `git branch | awk '{ print $1}' | grep -v '^*'`; do if [[ "$branch" != "master" && "$branch" != "main" ]]; then git branch -D $branch; fi; done
}


function git-squash {
    NUM_COMMITS=$@;
    re='^[0-9]+$'
    if ! [[ $NUM_COMMITS =~ $re ]]
    then
        echo 'Error: git-squash expects a number of commits to squash'
    else
        git reset --soft HEAD~${NUM_COMMITS} && git commit --edit -m"$(git log --format=%B --reverse HEAD..HEAD@{1})"
    fi
}

function git-ls-changed {
    git status --porcelain | grep M | awk '{print $2}'
}

function git-delete-tag {
    # delete tag locally
    git tag -d $1
    # delete tag in all remotes
    for remote in $(git remote)
    do
        git push $remote :refs/tags/$1
    done
}

function git-rename-branch {
    # renames the local branch and on ALL remotes
    git branch -m $1 $2
    for remote in $(git remote)
    do
        git push $remote -u $2
        git push $remote --delete $1
    done
}


################################################################################
# Git Worktrees
#
# The .worktrees Standard:
#   Worktrees live in a .worktrees directory in the PARENT of the main repo.
#
#   ~/code/
#   ├── project-a/              # main worktree
#   ├── project-b/              # main worktree
#   └── .worktrees/
#       ├── project-a/
#       │   ├── feature-x/
#       │   └── bugfix-y/
#       └── project-b/
#           └── refactor-z/
#
#   For nested org directories:
#   ~/code/
#   └── my-org/
#       ├── project-a/          # main worktree
#       ├── project-b/          # main worktree
#       └── .worktrees/
#           ├── project-a/
#           │   └── feat/
#           │       └── new-thing/
#           └── project-b/
#               └── fix/
#                   └── bug-123/
#
# All gwt commands require being inside a git repo or worktree.
# The worktrees directory is derived automatically from git context.
#

# Protected branches that shouldn't have worktrees (override in .bashrc.$USER if needed)
GWT_PROTECTED_BRANCHES="${GWT_PROTECTED_BRANCHES:-main master develop development staging release}"

# Helper: find the main worktree path from current git context
function _gwt_main_worktree {
    git worktree list --porcelain 2>/dev/null | head -1 | sed 's/^worktree //'
}

# Helper: compute the project worktrees directory
# Returns: <parent-of-main-repo>/.worktrees/<repo-name>
function _gwt_worktrees_dir {
    local main=$(_gwt_main_worktree)
    if [[ -z "$main" ]]; then
        return 1
    fi
    echo "$(dirname "$main")/.worktrees/$(basename "$main")"
}

# Helper: detect project name (repo directory name)
function _gwt_detect_project {
    local main=$(_gwt_main_worktree)
    if [[ -n "$main" ]]; then
        basename "$main"
        return 0
    fi
    return 1
}

# Helper: check if a branch is protected
function _gwt_is_protected_branch {
    local branch=$1
    local protected

    for protected in $GWT_PROTECTED_BRANCHES; do
        if [[ "$branch" == "$protected" ]]; then
            return 0
        fi
    done
    return 1
}

# Helper: detect current worktree name (returns empty if in main repo)
# Handles slash-containing names like feat/terraform-state-backend
function _gwt_detect_worktree {
    local wt_dir=$(_gwt_worktrees_dir)
    [[ -z "$wt_dir" ]] && return 1

    local toplevel
    toplevel=$(git rev-parse --show-toplevel 2>/dev/null)
    [[ -z "$toplevel" ]] && return 1

    # If the toplevel is under the worktrees dir, extract the relative name
    if [[ "$toplevel" == "$wt_dir/"* ]]; then
        echo "${toplevel#$wt_dir/}"
        return 0
    fi

    return 1
}

# Helper: require git context, printing error if not in a repo
function _gwt_require_git {
    if ! git rev-parse --git-dir &>/dev/null; then
        echo "Error: Not inside a git repository."
        echo "Navigate to a git repo or worktree first."
        return 1
    fi
    return 0
}

# cd into a worktree (or main repo if no worktree specified)
# Must be inside a git repo or worktree.
function gwt {
    _gwt_require_git || return 1

    local main=$(_gwt_main_worktree)
    local wt_dir=$(_gwt_worktrees_dir)

    # No args: go to main repo
    if [[ $# -eq 0 ]]; then
        cd "$main"
        return
    fi

    # One arg: go to named worktree
    if [[ $# -eq 1 ]]; then
        local target="$wt_dir/$1"
        if [[ -d "$target" ]]; then
            cd "$target"
        else
            echo "Error: Worktree '$1' not found."
            echo "Expected: $target"
            echo ""
            echo "Available worktrees:"
            gwt-ls
            return 1
        fi
        return
    fi

    echo "Usage: gwt [worktree-name]"
    echo "       gwt              # go to main repo"
    echo "       gwt <name>       # go to worktree (e.g. gwt feat/my-branch)"
    echo "       (must be inside a git repo or worktree)"
    return 1
}

# cd to a worktree
function gwt-cd {
    _gwt_require_git || return 1

    if [[ $# -eq 0 ]]; then
        echo "Usage: gwt-cd <worktree>"
        echo "       (must be inside a git repo or worktree)"
        return 1
    fi

    local wt_dir=$(_gwt_worktrees_dir)
    local target="$wt_dir/$1"

    if [[ ! -d "$target" ]]; then
        echo "Error: Worktree '$1' not found."
        echo "Expected: $target"
        return 1
    fi

    cd "$target"
}

# Create a worktree (auto-detects if branch exists or needs to be created)
function gwt-mk {
    local force=false
    if [[ "$1" == "--force" || "$1" == "-f" ]]; then
        force=true
        shift
    fi

    _gwt_require_git || return 1

    local branch=$1
    local base=${2:-${GIT_DEFAULT_BRANCH}}
    local main=$(_gwt_main_worktree)
    local wt_dir=$(_gwt_worktrees_dir)

    if [[ -z "$branch" ]]; then
        echo "Usage: gwt-mk [--force] <branch> [base-branch]"
        echo "       (must be inside a git repo or worktree)"
        echo "       If branch exists, creates worktree for it"
        echo "       If branch doesn't exist, creates new branch from base-branch"
        return 1
    fi

    if [[ "$force" == false ]] && _gwt_is_protected_branch "$branch"; then
        echo "Warning: '$branch' is a protected branch. Creating worktrees for it is unusual."
        echo "Use 'gwt-mk --force $branch' to override."
        echo "(Configure with GWT_PROTECTED_BRANCHES variable)"
        return 1
    fi

    # Create parent directories (handles slash-containing branch names like feat/foo)
    mkdir -p "$(dirname "$wt_dir/$branch")"

    # Check if branch exists locally or remotely
    if git -C "$main" show-ref --verify --quiet "refs/heads/$branch" 2>/dev/null || \
       git -C "$main" show-ref --verify --quiet "refs/remotes/origin/$branch" 2>/dev/null; then
        # Branch exists - create worktree for it
        git -C "$main" worktree add "$wt_dir/$branch" "$branch"
    else
        # Branch doesn't exist - create new branch from base
        git -C "$main" worktree add -b "$branch" "$wt_dir/$branch" "$base"
    fi
}

# List all worktrees for the current project
function gwt-ls {
    _gwt_require_git || return 1

    local main=$(_gwt_main_worktree)

    # Get worktree list and highlight current directory
    local current_path="$PWD"
    git -C "$main" worktree list | while IFS= read -r line; do
        # Extract the path (first field)
        local wt_path="${line%% *}"
        if [[ "$current_path" == "$wt_path"* ]]; then
            echo "* $line"
        else
            echo "  $line"
        fi
    done
}

# Remove a worktree
function gwt-rm {
    _gwt_require_git || return 1

    local main=$(_gwt_main_worktree)
    local wt_dir=$(_gwt_worktrees_dir)
    local name

    # No args: if inside a worktree, offer to remove it
    if [[ $# -eq 0 ]]; then
        name=$(_gwt_detect_worktree)

        if [[ -z "$name" ]]; then
            echo "Usage: gwt-rm [name]"
            echo "       (run with no args inside a worktree to remove it)"
            return 1
        fi

        local project=$(_gwt_detect_project)

        # Confirm before removing current worktree
        echo "Remove worktree '$name' from project '$project'? [y/N] "
        read -r confirm
        if [[ "$confirm" != "y" && "$confirm" != "Y" ]]; then
            echo "Cancelled."
            return 0
        fi

        # cd out of worktree before removing
        cd "$main"
    else
        name=$1
    fi

    if [[ -z "$name" ]]; then
        echo "Usage: gwt-rm [name]"
        echo "       (must be inside a git repo or worktree)"
        return 1
    fi

    git -C "$main" worktree remove "$wt_dir/$name"

    # Clean up empty parent directories within the worktrees dir
    local parent
    parent=$(dirname "$wt_dir/$name")
    while [[ "$parent" != "$wt_dir" && "$parent" != "$(dirname "$wt_dir")" ]]; do
        rmdir "$parent" 2>/dev/null || break
        parent=$(dirname "$parent")
    done
    # Clean up the project worktrees dir itself if empty
    rmdir "$wt_dir" 2>/dev/null
}

# Prune stale worktree references
function gwt-prune {
    _gwt_require_git || return 1

    local main=$(_gwt_main_worktree)
    git -C "$main" worktree prune
}

# Bash completion for gwt commands

# Helper: get current word from COMP_LINE (handles slashes in branch names)
function _gwt_get_cur {
    local line="${COMP_LINE:0:COMP_POINT}"
    # Get last word, not splitting on /
    echo "${line##* }"
}

function _gwt_complete_worktrees {
    local cur=$(_gwt_get_cur)
    local main=$(_gwt_main_worktree)
    [[ -z "$main" ]] && return
    local wt_dir=$(_gwt_worktrees_dir)
    # Use git worktree list to get actual worktree names (handles slashes in names)
    local worktrees=$(git --no-pager -C "$main" worktree list --porcelain 2>/dev/null | \
        grep --color=never "^worktree " | \
        sed "s|^worktree ||" | \
        sed "s|^$wt_dir/||" | \
        grep --color=never -v "^/")
    COMPREPLY=($(compgen -W "$worktrees" -- "$cur"))
}

function _gwt_complete_branches {
    local cur=$(_gwt_get_cur)
    local main=$(_gwt_main_worktree)
    [[ -z "$main" ]] && return
    local branches=$(git --no-pager -C "$main" branch -a --no-color --format='%(refname:short)' 2>/dev/null | \
        sed 's|origin/||' | sort -u)
    COMPREPLY=($(compgen -W "$branches" -- "$cur"))
}

function _gwt_completion {
    case $COMP_CWORD in
        1) _gwt_complete_worktrees ;;
    esac
}

function _gwt_mk_completion {
    local cur="${COMP_WORDS[COMP_CWORD]}"

    # Handle --force flag
    if [[ "$cur" == -* ]]; then
        COMPREPLY=($(compgen -W "--force -f" -- "$cur"))
        return
    fi

    # Determine position accounting for --force/-f
    local pos=$COMP_CWORD
    if [[ "${COMP_WORDS[1]}" == "--force" || "${COMP_WORDS[1]}" == "-f" ]]; then
        ((pos--))
    fi

    case $pos in
        1) _gwt_complete_branches ;;
    esac
}

function _gwt_rm_completion {
    case $COMP_CWORD in
        1) _gwt_complete_worktrees ;;
    esac
}

# Register completions (nospace prevents adding space after slash in branch names)
complete -o nospace -F _gwt_completion gwt
complete -o nospace -F _gwt_completion gwt-cd
complete -o nospace -F _gwt_mk_completion gwt-mk
complete -o nospace -F _gwt_rm_completion gwt-rm


